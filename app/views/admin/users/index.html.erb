<% flash.each do |key, message| %>
<p class="alert alert-<%= key %> alert-dismissable">
	<button class="close" type="button" data-dismiss="true" aria-hidden="true">&times;</button>
	<%= message %>
</p>
<% end %>
<section class="admin-panel panel panel-default">
	<div class="panel-heading">
		<h4 class="pull-left">
			Users
		</h4>
		<%= link_to new_admin_user_path, class: "btn btn-success pull-left" do %>
			<%= content_tag( :i, "", class: "glyphicon glyphicon-file" ) %>
			Add new
		<% end %>
		<%= search_form admin_users_path %>
		<div class="clearfix"></div>
	</div>
	<table class="table table-striped table-hover admin-table">
		<thead>
			<tr>
				<th>Username</th>
				<th>Email</th>
				<th>Group</th>
				<th class="actions">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td>
					<%= link_to user.username, edit_admin_user_path( user ) %>
				</td>
				<td>
					<%= user.email %>
				</td>
				<td>
					<% if user.role %>
						<%= user.role.title %>
					<% end %>
				</td>
				<td class="actions">
					<%= link_to edit_admin_user_path( user ), class: "btn btn-xs btn-warning" do %>
						<%= content_tag( :i, "", class: "glyphicon glyphicon-pencil" ) %>
						Edit
					<% end %>
					<%= button_to admin_user_path( user ), method: :delete, confirm: "Are you sure?", class: "btn btn-xs btn-danger" do %>
						<%= content_tag( :i, "", class: "glyphicon glyphicon-trash" ) %>
						Delete
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</section>
