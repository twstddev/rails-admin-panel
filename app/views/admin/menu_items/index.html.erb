<% flash.each do |key, message| %>
<p class="alert alert-<%= key %> alert-dismissable">
	<button class="close" type="button" data-dismiss="true" aria-hidden="true">&times;</button>
	<%= message %>
</p>
<% end %>
<section class="admin-panel panel panel-default">
	<div class="panel-heading">
		<h4 class="pull-left">
			Menu
		</h4>
		<%= link_to new_admin_menu_item_path, class: "btn btn-success pull-left" do %>
			<%= content_tag( :i, "", class: "glyphicon glyphicon-file" ) %>
			Add new
		<% end %>
		<div class="clearfix"></div>
	</div>
	<div class="panel-body">
		<% if @menu_items.any? %>
			<ul class="nav nav-pills nav-stacked admin-pills sortable" data-update-url="<%= admin_menu_items_sort_url %>">
				<%= render @menu_items %>
			</ul>
		<% end %>
	</div>
</section>
