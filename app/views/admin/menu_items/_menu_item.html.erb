<li class="bg-info" id="menu_item_<%= menu_item.id %>">
	<%= link_to edit_admin_menu_item_path( menu_item ), class: "" do %>
		<%= content_tag( :i, "", class: "glyphicon glyphicon-move handle" ) %>
		<%= menu_item.title %>
	<% end %>
	<%= button_to admin_menu_item_path( menu_item.id ), method: :delete, confirm: "Are you sure?", class: "btn btn-xs btn-danger" do %>
		<%= content_tag( :i, "", class: "glyphicon glyphicon-trash" ) %>
		Delete
	<% end %>
	<% if menu_item.children.any? %>
		<ul class="nav nav-pills nav-stacked">
			<%= render partial: "menu_item", collection: menu_item.children.order( :position.asc ) %>
		</ul>
	<% end %>
</li>
